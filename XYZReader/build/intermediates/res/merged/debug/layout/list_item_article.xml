<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/article_title"
        android:layout_width="@dimen/list_item_tv_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_item_margin_start"
        android:layout_marginStart="@dimen/list_item_margin_start"
        android:textSize="@dimen/list_item_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/thumbnail" />

    <TextView
        android:id="@+id/article_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lsit_item_sibtitle_margin_top"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/list_item_subtitle_text_size"
        app:layout_constraintLeft_toLeftOf="@+id/article_title"
        app:layout_constraintTop_toBottomOf="@+id/article_title"
        tools:layout_conversion_absoluteHeight="16dp"
        tools:layout_conversion_absoluteWidth="259dp"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="40dp" />


    <com.example.xyzreader.ui.DynamicHeightNetworkImageView
        android:id="@+id/thumbnail"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/list_item_thumb_margin_bottom"
        android:layout_marginEnd="@dimen/list_item_thumb_margin_right"
        android:layout_marginRight="@dimen/list_item_thumb_margin_right"
        android:layout_marginTop="@dimen/list_item_thumb_margin_top"
        android:background="@color/photo_placeholder"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>

