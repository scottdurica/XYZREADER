<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">


    <TextView
        android:id="@+id/article_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_item_text_size"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/thumbnail"
        app:layout_constraintLeft_toLeftOf="@+id/thumbnail"
        app:layout_constraintRight_toRightOf="@+id/thumbnail" />

    <TextView
        android:id="@+id/article_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/list_item_subtitle_text_size"
        tools:layout_conversion_absoluteHeight="16dp"
        tools:layout_conversion_absoluteWidth="259dp"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="40dp"
        app:layout_constraintTop_toBottomOf="@+id/article_title"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toRightOf="@+id/article_title"
        app:layout_constraintLeft_toLeftOf="@+id/article_title" />


    <com.example.xyzreader.ui.DynamicHeightNetworkImageView
        android:id="@+id/thumbnail"
        android:layout_width="0dp"
        android:layout_height="253dp"
        android:layout_marginBottom="@dimen/list_item_thumb_margin_bottom"
        android:layout_marginEnd="@dimen/list_item_thumb_margin_right"
        android:layout_marginRight="@dimen/list_item_thumb_margin_right"
        android:background="@color/photo_placeholder"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />
</android.support.constraint.ConstraintLayout>

